@model IEnumerable<Magazine_Palpay.Data.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
               <td>
                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light-warning">تعديل</a>  
                 <a @*onclick="deleteFun(@item.Id)"*@ class="btn btn-light-danger">حذف</a>
            </td>
            </td>
        </tr>
}
    </tbody>
</table>
