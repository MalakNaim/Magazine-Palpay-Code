@model Magazine_Palpay.Data.Models.Post 
<style>
.hide{
    display:none;
}
</style>
 <div class="row mb-6">
       <label class="required fs-5 fw-bold mb-2">عنوان المنشور </label>
       <input asp-for="Head"  type="text" class="form-control form-control-solid"/>
       <span asp-validation-for="Head" class="text-danger"></span>
 </div>
 <div class="row mb-6">
    <label class="required fs-5 fw-bold mb-2">النص</label> 
    <textarea asp-for="Body" class="form-control summernote form-control-solid" rows="5" aria-multiline="true"></textarea>
    <span asp-validation-for="Body" class="text-danger"></span> 
</div>
<div class="row mb-6">
    <label class="required fs-5 fw-bold mb-2">النوع</label> 
    <select asp-for="PostTypeId" asp-items="@ViewBag.PostType" data-control="select2" data-placeholder="اختر  النوع ..." class="form-select form-select-solid">
        <option  value="">اختر النوع </option>
    </select>    
    <span asp-validation-for="PostTypeId" class="text-danger"></span> 
</div>
<div class="row mb-6">
    <label class="fs-5 fw-bold mb-2">متفرع النوع</label> 
    <select asp-for="PostSubTypeId" asp-items="@ViewBag.PostSubType" data-control="select2" data-placeholder="اختر  متفرع النوع ..." class="form-select form-select-solid">
        <option  value="">اختر المتفرع </option>
    </select>    
    <span asp-validation-for="PostSubTypeId" class="text-danger"></span> 
</div>
<div class="row mb-6">
    <label class="fs-5 fw-bold mb-2">نوع الميديا للمنشور</label> 
    <select asp-for="MediaType" data-control="select2" data-placeholder="اختر  اختر  النوع ...الميديا ..." class="form-select form-select-solid">
        <option value="">اختر نوع الميديا </option>
        <option value="1">صورة </option>
        <option value="2">فيديو</option>
    </select>    
    <span asp-validation-for="PostSubTypeId" class="text-danger"></span> 
</div>
<div class="row mb-6 video hide">
       <label class="required fs-5 fw-bold mb-2"> رابط الفيديو </label>
       <input asp-for="VideoLink" type="text" class="form-control form-control-solid"/>
       <span asp-validation-for="VideoLink" class="text-danger"></span>
 </div>
<div class="row mb-6 photo hide">
    <label class="required fs-5 fw-bold mb-2">الصورة الرئيسية</label> 
    <input name="imgPost" type="file" class="form-control"/>
    @if(Model != null){
        if(Model.MainImage != null)
        {
           <a href="/assets/UploadImages/@Model.MainImage" target="_blank" class="btn btn-light-warning">عرض الصورة</a>
        }
    }
    <input type="hidden" asp-for="MainImage"/>
    <span asp-validation-for="MainImage" class="text-danger"></span> 
</div>
<div class="row mb-6">
    <div class="form-check">
		<input asp-for="PublishedPost" class="form-check-input" type="checkbox" value="true">
		<label class="fs-5 fw-bold mb-2" for="PublishedPost">نشر المنشور </label>
	</div>
</div>
<div class="row mb-6">
    <label class="required fs-5 fw-bold mb-2">ترتيب ظهور المنشور </label> 
    <select asp-for="OrderPlace" data-control="select2" data-placeholder="اختر  الترتيب ..." class="form-select form-select-solid">
        <option value="">اختر الترتيب </option>
        <option value="2">في الصفحة</option> 
        <option value="1">في القائمة</option>
    </select>   
    <span asp-validation-for="OrderPlace" class="text-danger"></span> 
</div>
<hr /> 
<div class="row mb-6">
    <label class="fs-5 fw-bold mb-2">إضافة صور للمنشور</label> 
    <input name="postPhotos" type="file" multiple class="form-control"/> 
</div> 
<div style="float:left;">
    <input type="submit" class="btn btn-purble" value="حفظ" />
    <a class="btn btn-light me-3" href='javascript:history.go(-1)'>رجوع</a>
</div>

<script>
$(document).ready(function(){
      var type = $("#MediaType").val();
      if(type == 1){
            $(".photo").removeClass("hide");
        }
        if(type == 2){
            $(".video").removeClass("hide");
        }
    $("#MediaType").change(function(){
        mediaType();
    });

    function mediaType(){
        var type = $("#MediaType").val();
        if(type == 1){
            $(".photo").removeClass("hide");
        }else{
             $(".photo").addClass("hide");
        }
        if(type == 2){
            $(".video").removeClass("hide");
        }else{
           $(".video").addClass("hide");
        }
    }
});
</script>