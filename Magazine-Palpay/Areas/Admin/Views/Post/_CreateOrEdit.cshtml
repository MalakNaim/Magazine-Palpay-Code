@model Magazine_Palpay.Data.Models.Post 
 <div class="row mb-6">
       <label class="required fs-5 fw-bold mb-2">عنوان المنشور </label>
       <input asp-for="Head"  type="text" class="form-control form-control-solid"/>
       <span asp-validation-for="Head" class="text-danger"></span>
 </div>
 <div class="row mb-6">
    <label class="required fs-5 fw-bold mb-2">النص</label> 
    <textarea asp-for="Body" class="form-control summernote form-control-solid" rows="5" aria-multiline="true"></textarea>
    <span asp-validation-for="Body" class="text-danger"></span> 
</div>
<div class="row mb-6">
    <label class="required fs-5 fw-bold mb-2">النوع</label> 
    <select asp-for="PostTypeId" asp-items="@ViewBag.PostType" data-control="select2" data-placeholder="اختر  النوع ..." class="form-select form-select-solid">
        <option  value="">اختر النوع </option>
    </select>    
    <span asp-validation-for="PostTypeId" class="text-danger"></span> 
</div>
<div class="row mb-6">
    <label class="required fs-5 fw-bold mb-2">متفرع النوع</label> 
    <select asp-for="PostSubType" asp-items="@ViewBag.PostSubType" data-control="select2" data-placeholder="اختر  متفرع النوع ..." class="form-select form-select-solid">
        <option  value="">اختر المتفرع </option>
    </select>    
    <span asp-validation-for="PostSubType" class="text-danger"></span> 
</div>
<div class="row mb-6">
    <label class="required fs-5 fw-bold mb-2">الصورة الرئيسية</label> 
    <input name="imgPost" type="file" class="form-control form-control-solid"/>
    <span asp-validation-for="MainImage" class="text-danger"></span> 
</div>
<div class="row mb-6">
    <div class="form-check">
		<input asp-for="IsPublished" class="form-check-input" type="checkbox" value="true">
		<label class="form-check-label" for="IsPublished">نشر المنشور </label>
	</div>
</div>
<div class="row mb-6">
    <label class="required fs-5 fw-bold mb-2">ترتيب ظهور المنشور </label> 
    <select asp-for="Order" data-control="select2" data-placeholder="اختر  الترتيب ..." class="form-select form-select-solid">
        <option value="">اختر الترتيب </option>
        <option value="1">في القائمة</option>
        <option value="2">في الصفحة</option>
    </select>   
    <span asp-validation-for="Order" class="text-danger"></span> 
</div>
<div style="float:left;">
    <input type="submit" class="btn btn-purble" value="حفظ" />
    <a class="btn btn-light me-3" href='javascript:history.go(-1)'>رجوع</a>
</div>
