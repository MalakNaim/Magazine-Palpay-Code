@model Magazine_Palpay.Web.Models.Gallery

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
 
<h4 class="mb-6 mt-3">تعديل المعرض</h4>
<hr />
<div class="row">
        <form asp-action="Edit" enctype="multipart/form-data" onsubmit="return jQueryModalPost(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-6">
               <label class="required fs-5 fw-bold mb-2">اسم المعرض </label>
                <input asp-for="Title" class="form-control form-control-solid" />
               <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="row mb-6">
               <label class="fs-5 fw-bold mb-2">الوصف </label>
                 <textarea asp-for="Description" rows="5" class="form-control form-control-solid"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div> 
            <div class="row mb-6">
                <label class="fs-5 fw-bold mb-2">إضافة صور </label> 
                <input name="galleryPhotos" type="file" multiple class="form-control"/> 
           </div>
          <div class="row mb-6">
            @foreach(var item in Model.GalleryPhoto)
            {
               <div class="col-md-2 mb-6">
                   <img src="~/assets/UploadImages/@item.Photo" class="img-thumbnail" style="width:200px; height:150px;"/>
                   <a href="#" imgId="@item.Id" class="delBtn"><i class="las la-trash text-danger"></i></a>
               </div>
            }
        </div> 
        <div style="float:left;">
            <input type="submit" class="btn btn-purble" value="حفظ" />
            <a class="btn btn-light me-3" href='javascript:history.go(-1)'>رجوع</a>
           </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
      $(".delBtn").click(function(){ 
          Swal.fire({
          title: 'هل تريد حذف هذه الصورة',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'نعم، بالتأكيد',
          cancelButtonText:"إلغاء"
        }).then((result) => { 
          if (result.isConfirmed) {
            $.ajax({
                type: 'POST',
                url:'/Admin/Gallery/DeletePhoto?id=' +  $(this).attr("imgId") ,
                 contentType: false,
                processData: false,
                success: function (res) { 
                     Swal.fire('تمت عملية الحذف بنجاح');
                     location.reload();
                },
                error: function (err) {
                    console.log(err)
                }
             });
          }
        });

       });
    </script>
}
