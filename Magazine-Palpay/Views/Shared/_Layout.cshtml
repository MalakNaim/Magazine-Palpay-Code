@using Magazine_Palpay.Enums
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext _context; 
@{
	var deals = (int)PostTypeEnum.Deals;
	var campaines = (int)PostTypeEnum.Campaines;
	var it = (int)PostTypeEnum.IT;
	var fintech = (int)PostTypeEnum.Fintech; 
	var postTypes = _context.PostType.Where(x => !x.IsDelete).ToList();
    var MultiNews = postTypes.Where(x => x.ParentId.Equals((int)PostTypeEnum.OtherNews)).ToList();
    var Social = postTypes.Where(x => x.ParentId.Equals((int)PostTypeEnum.Social)).ToList();
    var BOP = postTypes.Where(x => x.ParentId.Equals((int)PostTypeEnum.BankOfPalestine)).ToList();
    var Employees = postTypes.Where(x => x.ParentId.Equals((int)PostTypeEnum.Employees)).ToList();
	var GalleryAlbum = _context.Gallery.Where(x=>!x.IsDelete).ToList();
    var ListNews = _context.Post
        .Include(x => x.PostType)
        .Where(x => x.PostTypeId.Equals((int)PostTypeEnum.OtherNews)
        && !x.IsDelete && x.PublishedPost && x.OrderPlace.Equals(1) && x.MediaType.Equals(1)).OrderByDescending(x => x.Id)
		.Take(6).ToList();  
		var quiz = _context.Ads.Where(x => !x.IsDelete && x.Order.Equals(1)).ToList();
	}
<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <base href="">
    <title>المجلة الالكترونية</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="~/assets/media/logos/favicon.png" />
	<link rel="stylesheet" href="~/ui/css/tricker/eocjs-newsticker.css"> 
    <partial name="_Styles" />
    <partial name="_Scripts" />
    @RenderSection("css", required: false)
	<style>
		.menu ul > li > a { 
			padding: 10px 8px !important; 
		}
	header.primary {
    position: unset !important;
    z-index: 1999;
    top: 0;
    right: 0;
    width: 100%;
    transition: all 0.5s;
    -webkit-transition: all 0.5s;
    -o-transition: all 0.5s;
    -moz-transition: all 0.5s;
   }
   section{
    padding-top: 15px !important;
    padding-right: 15px !important;
    padding-bottom: 15px !important;
    padding-left: 15px !important;
   }

    @@media (max-width: 992px) {
     .img-size{
		 height:60px;
		 width:390px;
	 }
    }

    @@media (min-width: 992px) {
        .img-size{
		 height:80px;
		 width:550px;
	 }
    }

</style>
</head>

<body class="skin-orange">
	@*<img src="~/ui/images/3.png"/>*@
		<header class="primary mb-5">
			<div class="firstbar">
				<div class="container">
					<div class="row"> 
					@{
						if(quiz.Count() > 0)
						{ 
							var lang = @quiz.FirstOrDefault().Owner;
							if (lang.Contains("Arabic"))
							{
								<div class="col-md-6 m-2"></div>
								foreach(var test in quiz)
								{
									<div class="col-md-6 m-2">
										<a href="@test.Link" target="_blank">
											<img src="~/assets/UploadImages/@test.Image" class="img-fluid img-size"/>
										</a>
									</div>
								}
							}
							else
							{
								foreach(var test in quiz)
								{
									<div class="col-md-6 m-2">
										<a href="@test.Link" target="_blank">
											<img src="~/assets/UploadImages/@test.Image" class="img-fluid img-size"/>
										</a>
									</div>
								}
							}
					    }
				    }
					</div>
				</div>
			</div> 
			<!-- Start nav -->
			<nav class="menu">
				<div class="container">
					<div class="brand">
						<a href="#">
							<img src="~/ui/images/logo.png" alt="Palpay Logo">
						</a>
					</div>
					<div class="mobile-toggle">
						<a href="#" data-toggle="menu" data-target="#menu-list"><i class="ion-navicon-round"></i></a>
					</div>
					<div class="mobile-toggle">
						<a href="#" data-toggle="sidebar" data-target="#sidebar"><i class="ion-ios-arrow-left"></i></a>
					</div>
					<div id="menu-list">
						<ul class="nav-list">
							<li class="for-tablet nav-title"><a>Menu</a></li>
							<li class="for-tablet"><a href="login.html">Login</a></li>
							<li class="for-tablet"><a href="register.html">Register</a></li>
							<li><a href="/">الرئيسية</a></li>
 							<li><a href="/PostDetails/ByType?type=@deals">الاتفاقيات</a></li>
							<li><a href="/PostDetails/ByType?type=@campaines">الحملات </a></li> 
							<li><a href="/PostDetails/ByType?type=@it">التحول الرقمي</a></li>
							<li><a href="/PostDetails/ByType?type=@fintech">التكنولوجيا المالية</a></li>
 							<li class="dropdown magz-dropdown magz-dropdown-megamenu"><a href="#">منوعات<i class="ion-ios-arrow-right"></i></a>
								<div class="dropdown-menu megamenu">
									<div class="megamenu-inner">
										<div class="row">
											<div class="col-md-3">
												<!-- <div class="row">
													 <div class="col-md-12">
														<h2 class="megamenu-title">آخر الأخبار</h2>
													</div>
												</div> -->
												<ul class="vertical-menu">
													@if(MultiNews != null){
														@foreach(var item in MultiNews)
														{
															<li><a href="/PostDetails/BySubType?subType=@item.Id"><i class="ion-ios-circle-outline"></i>@item.Name</a></li>
														} 
													}
												</ul>
											</div>
											<div class="col-md-9">
												<div class="row">
													<div class="col-md-12">
														<h2 class="megamenu-title">أهم المواضيع</h2>
													</div>
												</div>
												<div class="row">
												@if(ListNews != null){
													@foreach(var item in ListNews)
													{
														<article class="article col-md-4 mini my-15">
															<div class="inner">
																<figure>
																	<a href="/PostDetails/Details?id=@item.Id">
																		<img src="~/assets/UploadImages/@item.MainImage" alt="@item.Head">
																	</a>
																</figure>
																<div class="padding">
																	<div class="detail">
 																		<div class="category"><a href="#">@item.PostType.Name</a></div>
																	</div>
																	<h2><a href="/PostDetails/Details?id=@item.Id">@item.Head</a></h2>
																</div>
															</div>
														</article>
													} 
												}
												</div>
											</div>
										</div>								
									</div>
								</div>
							</li>
							<li class="dropdown magz-dropdown">
								<a href="category.html">مجموعة بنك فلسطين <i class="ion-ios-arrow-right"></i></a>
								<ul class="dropdown-menu">
								@if (BOP != null)
								{
									@foreach (var item in BOP)
									{
										<li><a href="/PostDetails/BySubType?subType=@item.Id">@item.Name</a></li>
									}

								}
								</ul>
							</li>
							<li class="dropdown magz-dropdown">
								<a href="#">اجتماعيات <i class="ion-ios-arrow-right"></i></a>
								<ul class="dropdown-menu">
								@foreach(var item in Social)
								{
									<li><a href="/PostDetails/BySubType?subType=@item.Id">@item.Name</a></li>
								} 
								</ul>
							</li>
						    <li class="dropdown magz-dropdown">
								<a href="#">معرض الصور <i class="ion-ios-arrow-right"></i></a>
								<ul class="dropdown-menu">
								@foreach(var item in GalleryAlbum)
								{
									<li><a href="/GalleryAlbum/Index?id=@item.Id">@item.Title</a></li>
								} 
								</ul>
							</li>
							<li><a href="/Books/Index">معرض الكتب</a></li>
							<li class="dropdown magz-dropdown"><a href="#">الموظفين <i class="ion-ios-arrow-right"></i></a>
								<ul class="dropdown-menu">
								     <li><a href="/Employees/Index"> الإدارة التنفيذية</a></li>
									@if (Employees != null)
									{
										@foreach (var item in Employees)
										{
											<li><a href="/PostDetails/BySubType?subType=@item.Id">@item.Name</a></li>
										}

									}
								 
								</ul>
							</li>
						</ul>
					</div>
				</div>
			</nav>
	<!-- End nav -->
		@{  
			if(ViewBag.News != null)
				{
					<div class="container">
						<div class="row mt-6">
							<div id="ticker">
							  <div class="title">آخر الأخبار</div> 
							   @foreach(var item in ViewBag.News){
								   <div id="example-5">@item.Title</div> 
						       }  
							</div> 
						</div>
					</div>
				} 
	    }
			
		</header>

	    @RenderBody()
 
		<!-- Start footer -->
		<footer class="footer">
			<div class="container">
			<div class="row"> 
				<div class="col-md-4"></div>
				<div class="col-md-8">
 					<div class="block">
						<h1 class="block-title"> عن الشركة</h1>
						<div class="block-body">
							<figure class="foot-logo">
								<img src="~/ui/images/logo.png" class="img-responsive" alt="Logo">
							</figure>
							<p class="brand-description">
								نحن في شركة Palpay الشركة الرائدة في مجال الدفع الالكتروني محلياً اقليمياً ودولياً، هدفنا تطوير وابتكار آليات دفع الكترونية جديدة تسهل على المواطن تسديد التزاماته المالية وتوفر عليه الجهد والوقت.
							</p>
 						</div>
					</div>
				</div>
				</div>
				<div class="block">
							<h1 class="block-title"> تابعنا</h1>
							<div class="block-body">
								<ul class="social trp">
									<li>
										<a href="https://www.facebook.com/PalPayCompany" class="facebook">
											<svg><rect width="0" height="0"></rect></svg>
											<i class="ion-social-facebook"></i>
										</a>
									</li>
									<li>
										<a href="https://www.instagram.com/palpayco/" class="instagram">
											<svg><rect width="0" height="0"></rect></svg>
											<i class="ion-social-instagram-outline"></i>
										</a>
									</li>  
									<li>
										<a href="https://www.palpay.ps/" class="dribbble">
											<svg><rect width="0" height="0"></rect></svg>
											<i class="ion-social-dribbble"></i>
										</a>
									</li>
									<li>
										<a href="https://www.linkedin.com/company/palpay/mycompany/" class="linkedin">
											<svg><rect width="0" height="0"></rect></svg>
											<i class="ion-social-linkedin"></i>
										</a>
									</li> 
								</ul>
							</div>
						</div>
 				<div class="row">
					<div class="col-md-12">
						<div class="copyright">
						&copy; @DateTime.Today.Year	جميع الحقوق محفوظة لدى Palpay 
						</div>
					</div>
				</div>
			</div>
		</footer>  
		    @RenderSection("scripts", required: false)
			<script src="~/ui/css/tricker/eocjs-newsticker.js"></script>
			<script>
				$('#example-5').eocjsNewsticker({
				  speed: 25,
				  divider: '<img src="/assets/media/logos/favicon.png" alt="Palpay"/>',
				  direction:  'rtl'
				});
			</script>
	</body>
</html>
