@using Magazine_Palpay.Web.ViewModels
@using Magazine_Palpay.Enums
@model Tuple<List<Magazine_Palpay.Data.Models.Post>, CurrencyViewModel> 

@{
	var lst = Model.Item1.Where(x => x.PostTypeId != ((int)PostTypeEnum.OtherNews)
	&& x.MediaType.Equals(1)
	&& x.PostTypeId != (int)PostTypeEnum.Deals
	&& x.PostTypeId != (int)PostTypeEnum.IT
	&& x.PostTypeId != (int)PostTypeEnum.Campaines
	&& x.PostTypeId != (int)PostTypeEnum.Fintech)
   .Take(8).ToList();
}
@foreach(var item in lst)
		{
<article class="col-md-12 article-list">
		<div class="inner">
			<figure>
				<a href="/PostDetails/Details?id=@item.Id">
					<img src="~/assets/UploadImages/@item.MainImage" alt="@item.Head">
				</a>
			</figure>
			<div class="details">
				<div class="detail">
					<div class="category">
						<a href="#">@item.PostType.Name</a>
					</div>
					@*<div class="time">@item.CreatedAt</div>*@
				</div>
				<h1><a href="/PostDetails/Details?id=@item.Id">@item.Head</a></h1>
				<p>انقر هنا لمعرفة مزيد تفاصيل الخبر</p>

				@*<p>
				@if(item.Body.Length > 200){
					<p>@Html.Raw(item.Body)</p>
				}
				else
				{
					<p>@Html.Raw(item.Body)</p>
				}
				</p>*@
				<footer>
 					<a class="btn btn-primary more" href="/PostDetails/Details?id=@item.Id">
						<div>التفاصيل</div>
						<div><i class="ion-ios-arrow-thin-right"></i></div>
					</a>
				</footer>
			</div>
		</div>
</article>
}
				 