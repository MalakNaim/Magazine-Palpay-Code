  @model List<Magazine_Palpay.Web.Models.Book>
	<section class="search">
			<div class="container">
				<div class="row">
				<form action="~/Books/LoadAll" method="post" class="form-submit">
					<div class="row" style="padding:5px 15px 0 15px;">
						<div class="col-md-4"></div> 
						<div class="col-md-4">
							<aside>
								<h2 class="aside-title">تصنيفات الكتب</h2>  
								<div class="aside-body">
									<select asp-items="@ViewBag.CategoryId" class ="form-control" id="category" name="category">
									   <option value="0">اختر التصنيف</option>
									</select> 
								</div> 
							</aside>
						</div>
						<div class="col-md-4">
							<aside>
								<h2 class="aside-title">البحث بالاسم</h2>
								<div class="aside-body">
 									<div>
										<div class="form-group">
											<div class="input-group">
												<input type="text" name="searchKey" class="form-control" placeholder="بحث بالاسم ...">
												<div class="input-group-btn">
													<button class="btn btn-primary" type="submit">
														<i class="ion-search"></i>
													</button>
												</div>
											</div>
										</div>
									</div>
								</div>
							</aside>
						</div> 
					</div>
				    <hr />
				   <div class="col-md-12"> 
						<div class="row">
					@foreach(var book in Model.Where(x=>!x.IsDelete))
					{

						<article class="article col-md-3 pull-right">
							<div class="inner">
								<figure>
									<a href="~/assets/UploadFiles/@book.Link">
										<img src="~/assets/UploadImages/@book.Image">
									</a>
								</figure>
								<div class="padding">
									<div class="detail">
										<div class="time">@book.Author</div>
 										<div class="category">
											<a href="#">@book.BookCategory.Name</a>
									    </div>
									</div>
									@if(book.Name.Length < 23){
											<h2 style="padding-bottom: 28px;">@book.Name</h2>
										}
										else
										{ 
											<h2>@book.Name</h2>
										}

									<footer>
 										<a class="btn btn-primary more" href="~/assets/UploadFiles/@book.Link">
											<div>تحميل</div>
											<div><i class="ion-ios-arrow-thin-right"></i></div>
										</a>
									</footer>
								</div>
							</div>
						</article>   
					} 

					  <div class="col-md-12 text-center">
						<ul class="pagination">
							  <input id="page" name="page" type="hidden"/>
							  @{
									int prev = ViewBag.page;
									prev--;
							   }
						  <li class="prev"><a href="#" onclick="return pageNo(@prev)"><i class="ion-ios-arrow-left"></i></a></li>
						   @for (int i = 1; i <= ViewBag.NumberOfPages; i++)
							{ 
								if(ViewBag.page == i)
								{
									<li class="active"><a href="#" onclick="return pageNo(@i)">@i</a></li> 
								}
								else
								{
									<li><a href="#" onclick="return pageNo(@i)">@i</a></li> 
								} 
 							}
							@{
								int next = ViewBag.page;
								next++;
							} 
						  <li class="next"><a href="#" onclick="return pageNo(@next)"><i class="ion-ios-arrow-right"></i></a></li>
						</ul> 
					  </div>
						</div>
					</div> 
					</form>
				</div>
			</div>
	</section>  
	@section scripts{
		<script type="text/javascript">
		 function pageNo(page){
		   $("input[name=page]").val(page);  
		   $(".form-submit").submit();
		 }
		 $("#category").change(function(){
			 $(".form-submit").submit();
		 });
		</script>
	}
