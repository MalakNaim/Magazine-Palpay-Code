@model List<Magazine_Palpay.Data.Models.Post> 
<style>
@@media only screen and (min-width: 768px) {
	 .video-main-size {
		 width:350px;
	     height:280px;
	  }
	 
}
@@media only screen and (max-width: 600px) {
  .video-main-size {
    width:380px;
	height:280px;
  } 
}</style>
<section class="single" style="padding:15px !important;">
<div class="container">
	<div class="row">
		<div class="col-md-4 sidebar" id="sidebar">
			</div>
		<div class="col-md-8">
			<header>
				<h4 style="padding:40px;">@ViewBag.PostTypeName</h4> 
			</header>
		@foreach(var item in Model)
		{
			<article class="col-md-12 article-list">
					<div class="inner">
						@if(item.MediaType.Equals(1)){
								<figure>
									<a href="/PostDetails/Details?id=@item.Id">
										<img src="~/assets/UploadImages/@item.MainImage" alt="@item.Head">
									</a>
								</figure>
							}
							else if(item.MediaType.Equals(2))
							{
								<figure>
									<iframe id="mainVideo" class="video-main-size" src="@item.EmbedVideoLink" 
										title="@item.Head" frameborder="0"
										allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
										allowfullscreen></iframe>
								</figure>
							}
						<div class="details">
							<div class="detail">
								<div class="category">
									<a href="#">@item.PostType.Name</a>
								</div>
								@*<div class="time">@item.CreatedAt</div>*@
							</div>
							<h1><a href="/PostDetails/Details?id=@item.Id">@item.Head</a></h1>
								<p>انقر هنا لمعرفة مزيد تفاصيل الخبر</p> 
								<footer>
 								<a class="btn btn-primary more" href="/PostDetails/Details?id=@item.Id">
									<div>التفاصيل</div>
									<div><i class="ion-ios-arrow-thin-right"></i></div>
								</a>
							</footer>
						</div>
					</div>
				
			</article>
	     }
	  </div>
  </div>
</div>
</section>