@model Magazine_Palpay.Web.Models.Post

		<section class="single" style="padding:15px !important;">
			<div class="container">
				<div class="row">
					<div class="col-md-4 sidebar" id="sidebar">
					<aside>
						<div class="aside-body">
							@Html.Partial("_Ads")
						</div>
					</aside>
			    <aside> 
					@Html.Partial("_Videos")  
				</aside>
				<aside>
					<h1 class="aside-title">آخر الأخبار <a href="/Home/MultiNews" class="all">عرض الكل <i class="ion-ios-arrow-right"></i></a></h1>
					@Html.Partial("_LastPosts")
				</aside>
				<aside>
					<div class="aside-body">
						<form class="newsletter">
							<div class="icon">
								<i class="ion-ios-email-outline"></i>
								<h1>تابعنا</h1>
							</div>
							<div class="input-group">
								<input type="email" class="form-control email" placeholder="بريدك الالكتروني">
								<div class="input-group-btn">
									<button class="btn btn-primary"><i class="ion-paper-airplane"></i></button>
								</div>
							</div>
							<p>أرسل بريدك الالكتروني ليصلك كل جديد</p>
						</form>
					</div>
				</aside>
					</div>
					<div class="col-md-8">
					@Html.Partial("_PostDetails")
						<div class="line"><div>تصفح أيضاً</div></div>
						<div class="row">
							 @Html.Partial("_ReadMoreMainPost")
						</div>
					</div>
				</div>
			</div>
		</section>
