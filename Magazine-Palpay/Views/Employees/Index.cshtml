@model List<Magazine_Palpay.Web.Models.Employee>
<style>
	@@media only screen and (max-width: 600px) {
  .margin-mobile{
	  margin: 0 40px;
  }
}
</style>

    <section class="search">
			<div class="container">
				<div class="row margin-mobile">
	              <header>
			     	<h4 style="padding:40px;">الإدارة التنفيذية</h4> 
			     </header>
			@foreach(var employee in Model.OrderBy(x=>x.Order))
					{
					 <div class="col-md-3 pull-right">
							<div class='normal' style="margin:10px 0;">
								<div class='module'>
								<div class='thumbnail'>
									<a href="~/assets/UploadImages/@employee.Photo" target="_blank">
										<img src="~/assets/UploadImages/@employee.Photo" alt="@employee.Name"> 
 									</a>
 								</div>
								<div class='content'>
 									<span class="color-orange">@employee.Department.Name</span>
									<h1 class='m-title'>@employee.Name</h1>
									<P>@employee.JobTitle</P>  
								</div>
								</div>
						   </div>
						</div>
					}
		          
			   <div class="col-md-12 text-center">
		            <ul class="pagination">
						  @{
								int prev = ViewBag.page;
								prev--;
							}
		              <li class="prev"><a href="~/Employees/Index?page=@prev"><i class="ion-ios-arrow-left"></i></a></li>
					   @for (int i = 1; i <= ViewBag.NumberOfPages; i++)
						{ 
								if(ViewBag.page == i)
								{
									<li class="active"><a href="~/Books/Index?page=@i">@i</a></li> 
								}
								else
								{
									<li><a href="~/Employees/Index?page=@i">@i</a></li> 
								} 
 						}
						@{
							int next = ViewBag.page;
							next++;
						} 
		              <li class="next"><a href="~/Employees/Index?page=@next"><i class="ion-ios-arrow-right"></i></a></li>
		          </ul> 
		      </div> 
 				</div>
			</div> 
		</section>
